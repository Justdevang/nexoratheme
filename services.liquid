<div class="services section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
        <h2 id="SectionHeading-{{ section.id }}" class="services__heading inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
        
        {%- if section.settings.description != blank -%}
          <div class="services__description rte">
            {{ section.settings.description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="services-grid">
      {%- for block in section.blocks -%}
        <div class="service-card" {{ block.shopify_attributes }}>
          {%- case block.type -%}
            {%- when 'service' -%}
              <div class="service-number">
                {{ forloop.index | prepend: '0' | slice: -2, 2 }}
              </div>
              
              {%- if block.settings.title != blank -%}
                <h3 class="service__heading inline-richtext">
                  {{ block.settings.title }}
                </h3>
              {%- endif -%}
              
              {%- if block.settings.text != blank -%}
                <div class="service__text rte">
                  {{ block.settings.text }}
                </div>
              {%- endif -%}
              
              {%- if block.settings.link_label != blank and block.settings.link != blank -%}
                <a
                  href="{{ block.settings.link }}"
                  class="service-link"
                >
                  {{ block.settings.link_label | escape }} â†’
                </a>
              {%- endif -%}
          {%- endcase -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Services",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Our Services",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "richtext",
      "id": "description",
      "default": "<p>Comprehensive solutions for modern businesses</p>",
      "label": "Description"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        },
        {
          "value": "inverse",
          "label": "Inverse"
        }
      ],
      "default": "background-2",
      "label": "Color scheme"
    }
  ],
  "blocks": [
    {
      "type": "service",
      "name": "Service",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "title",
          "default": "Service title",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Service description text goes here</p>",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "link_label",
          "default": "Learn More",
          "label": "Link label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Services",
      "blocks": [
        {
          "type": "service",
          "settings": {
            "title": "Data Analytics",
            "text": "<p>Extract actionable insights from your data with advanced analytics and visualization tools.</p>",
            "link_label": "Learn More"
          }
        },
        {
          "type": "service",
          "settings": {
            "title": "Process Automation",
            "text": "<p>Streamline workflows and eliminate manual tasks with intelligent automation solutions.</p>",
            "link_label": "Learn More"
          }
        },
        {
          "type": "service",
          "settings": {
            "title": "Digital Transformation",
            "text": "<p>Transform your business with cutting-edge digital solutions and modern technologies.</p>",
            "link_label": "Learn More"
          }
        }
      ]
    }
  ]
}
{% endschema %}
